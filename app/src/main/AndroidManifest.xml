<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Camera Feature -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DOCUMEDX">

        <!-- Existing Activities -->
        <activity
            android:name=".IntroActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StaffSignUpActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".StaffLoginPageActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".SignUpActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustPan"
            >

        </activity>
        <activity
            android:name=".organization.OrganizationLoginActivity"
            android:windowSoftInputMode="adjustPan"
            >

        </activity>
        <activity
            android:name=".organization.OrganizationSignUpActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".organization.PatientUnderOrgazinationActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
            android:name=".LoadingActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".organization.AddStaffInOrganizationActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".organization.OrganizationEditProfileActivity"
            android:windowSoftInputMode="adjustPan"
            />

        <activity android:name=".organization.OrganizationSettingsActivity"
            android:windowSoftInputMode="adjustPan"
            />

        <activity android:name=".organization.AddStaffToDeptActivity"
            android:windowSoftInputMode="adjustPan"
            />

        <activity android:name=".organization.ViewStaffActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".organization.OrganizationDepartmentActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".organization.AddDepartmentActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".organization.OrganizationDashboardActivity"
            android:windowSoftInputMode="adjustPan"
            />

        <activity
            android:name=".patient.EditProfileActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".patient.PatientDashboardActivity"
            android:windowSoftInputMode="adjustPan"
            />

        <activity
            android:name=".patient.ViewReportsActivity"
            android:windowSoftInputMode="adjustPan"
            />

        <activity
            android:name=".staff.EditStaffProfileActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <!-- New Staff Dashboard Activities -->
        <activity
            android:name=".staff.StaffDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".staff.MyPatientsActivity"
            android:exported="false"
            android:parentActivityName=".staff.StaffDashboardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".staff.PatientDetailsActivity"
            android:exported="false"
            android:parentActivityName=".staff.MyPatientsActivity"
            android:screenOrientation="portrait" />



        <!-- File Provider for PDF sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.documedx.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
