<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:background="@color/white">

        <!--Navbar-->
        <TextView
            android:id="@+id/orgDepartmentHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Input_field_employee_department_text"
            android:background="@color/color_palette_4"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!--Department one-->
        <TextView
            android:id="@+id/patientText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="@string/Patient_name_text"
            app:layout_constraintTop_toBottomOf="@+id/orgDepartmentHeading"
            android:background="@color/color_palette_1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--Upload report-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadReportBtn"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_report_btn"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/patientText"
            android:layout_marginTop="10dp"/>
        <!--View Reports-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewReportBtn"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_report_btn"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patientText"
            android:layout_marginTop="10dp"/>




