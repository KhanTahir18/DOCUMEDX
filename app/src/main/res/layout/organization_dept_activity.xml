<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:background="@color/white">

        <!--Navbar-->
        <TextView
            android:id="@+id/orgDepartmentHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Input_field_employee_department_text"
            android:background="@color/color_palette_4"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!--DepartMent one-->
        <TextView
            android:id="@+id/deptNameField"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="@string/Input_field_employee_department_text"
            app:layout_constraintTop_toBottomOf="@+id/orgDepartmentHeading"
            android:background="@color/color_palette_1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--View more-->
        <TextView
            android:id="@+id/viewMoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Veiw_more_text"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/deptNameField"
            app:layout_constraintBottom_toBottomOf="@+id/deptNameField"
            app:layout_constraintStart_toStartOf="@+id/deptNameField"
            app:layout_constraintEnd_toEndOf="@id/deptNameField"
            app:layout_constraintHorizontal_bias="0.94"
            />

        <!--Go to dashboard btn-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goToDashBoardBtn"
            android:layout_width="200dp"
            style="@style/buttonStyle"
            android:layout_height="wrap_content"
            android:text="@string/org_Go_TO_dashboard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.9"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>