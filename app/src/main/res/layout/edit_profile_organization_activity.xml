<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Input_field_color"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:background="@color/Input_field_color">

        <!--Navbar-->
        <TextView
            android:id="@+id/editProText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:background="@color/color_palette_4"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/robotoblack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <!--Blank view-->
        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/editProText"
            android:background="@color/color_palette_3"
            />

        <!--Profile image-->
        <ImageView
            android:id="@+id/hospitalImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/round_hospital_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.17"
            />

        <!--                Image button for edit profile-->
        <ImageButton
            android:id="@+id/uploadImgBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/edit_text_ic"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/hospitalImageView"
            app:layout_constraintStart_toEndOf="@id/hospitalImageView"
            android:layout_marginStart="-10dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/editInfoCardView"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/editProText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="220dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewSConstarintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingBottom="40dp">
                <!--First Name Text, EditText and Bottom border-->
                <TextView
                    android:id="@+id/hospitalNameInputFieldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Input_field_text_color"
                    android:text="@string/Input_field_Hospital_Name_text"
                    app:layout_constraintBottom_toTopOf="@+id/hospitalNameInputField"
                    app:layout_constraintStart_toStartOf="@+id/hospitalNameInputField"
                    app:layout_constraintTop_toTopOf="@+id/cardViewSConstarintLayout"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/hospitalNameInputField"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/Empty_Edit_Text"
                    android:paddingBottom="1dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="3dp"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hospitalNameInputFieldText" />

                <!-- Bottom border -->
                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/color_palette_5"
                    app:layout_constraintEnd_toEndOf="@id/hospitalNameInputField"
                    app:layout_constraintStart_toStartOf="@id/hospitalNameInputField"
                    app:layout_constraintTop_toBottomOf="@id/hospitalNameInputField" />

                <!--Address Name Text, EditText and Bottom border-->
                <TextView
                    android:id="@+id/addressNameInputFieldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Input_field_text_color"
                    android:text="@string/Input_field_Address_no_text"
                    app:layout_constraintBottom_toTopOf="@+id/addressNameInputField"
                    app:layout_constraintStart_toStartOf="@+id/addressNameInputField"
                    app:layout_constraintTop_toBottomOf="@+id/hospitalNameInputField"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/addressNameInputField"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/Empty_Edit_Text"
                    android:paddingBottom="1dp"
                    android:paddingTop="3dp"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addressNameInputFieldText" />

                <!-- Bottom border -->
                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/color_palette_5"
                    app:layout_constraintEnd_toEndOf="@id/addressNameInputField"
                    app:layout_constraintStart_toStartOf="@id/addressNameInputField"
                    app:layout_constraintTop_toBottomOf="@id/addressNameInputField" />

                <!--PPnohe Name Text, EditText and Bottom border-->

                <TextView
                    android:id="@+id/phoneInputFieldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="-37dp"
                    android:text="@string/org_phone_text"
                    android:textColor="@color/Input_field_text_color"
                    app:layout_constraintBottom_toTopOf="@+id/phoneInputField"
                    app:layout_constraintStart_toStartOf="@+id/phoneInputField"
                    app:layout_constraintTop_toBottomOf="@+id/addressNameInputField" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="91+"
                    android:textColor="@color/color_palette_5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/phoneInputField"
                    app:layout_constraintEnd_toStartOf="@+id/phoneInputField" />

                <EditText
                    android:id="@+id/phoneInputField"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/Empty_Edit_Text"
                    android:inputType="phone"
                    android:paddingTop="3dp"
                    android:paddingBottom="1dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phoneInputFieldText" />

                <!-- Bottom border -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/color_palette_5"
                    app:layout_constraintTop_toBottomOf="@id/phoneInputField"
                    app:layout_constraintStart_toStartOf="@id/phoneInputField"
                    app:layout_constraintEnd_toEndOf="@id/phoneInputField" />

                <!--Email Name Text, EditText and Bottom border-->
                <TextView
                    android:id="@+id/emailNameInputFieldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Input_field_text_color"
                    android:text="@string/Input_field_Email_Address_text"
                    app:layout_constraintBottom_toTopOf="@+id/emailNameInputField"
                    app:layout_constraintStart_toStartOf="@+id/emailNameInputField"
                    app:layout_constraintTop_toBottomOf="@+id/phoneInputField"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/emailNameInputField"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/Empty_Edit_Text"
                    android:paddingBottom="1dp"
                    android:paddingTop="3dp"
                    android:textStyle="bold"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emailNameInputFieldText" />

                <!-- Bottom border -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/color_palette_5"
                    app:layout_constraintTop_toBottomOf="@id/emailNameInputField"
                    app:layout_constraintStart_toStartOf="@id/emailNameInputField"
                    app:layout_constraintEnd_toEndOf="@id/emailNameInputField" />

                <!--Address Name Text, EditText and Bottom border-->
                <TextView
                    android:id="@+id/orgTypeInputFieldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Input_field_text_color"
                    android:text="@string/org_type"
                    app:layout_constraintBottom_toTopOf="@+id/orgTypeInputField"
                    app:layout_constraintStart_toStartOf="@+id/orgTypeInputField"
                    app:layout_constraintTop_toBottomOf="@+id/emailNameInputField"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/orgTypeInputField"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/Empty_Edit_Text"
                    android:paddingBottom="1dp"
                    android:paddingTop="3dp"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/orgTypeInputFieldText" />

                <!-- Bottom border -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/color_palette_5"
                    app:layout_constraintEnd_toEndOf="@id/orgTypeInputField"
                    app:layout_constraintStart_toStartOf="@id/orgTypeInputField"
                    app:layout_constraintTop_toBottomOf="@id/orgTypeInputField" />

<!--                btns-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    style="@style/signUpPageEditTextStyles"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/orgTypeInputField"
                    app:layout_constraintStart_toStartOf="@id/cardViewSConstarintLayout"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    style="@style/buttonStyle"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/orgTypeInputField"
                    app:layout_constraintStart_toEndOf="@id/cancelBtn"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="50dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>