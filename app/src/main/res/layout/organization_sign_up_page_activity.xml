<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:background="@color/white">


    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/documedx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <!--Sign up Title-->
    <TextView
        android:id="@+id/SignUpPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/hospital_regiteration_text"
        android:textColor="@color/color_palette_5"
        android:textSize="30sp"
        android:fontFamily="@font/robotoblack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appLogo" />

    <!--First Name Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/hospitalNameInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="@string/Input_field_Hospital_Name_text"
        app:layout_constraintBottom_toTopOf="@+id/hospitalNameInputField"
        app:layout_constraintStart_toStartOf="@+id/hospitalNameInputField"
        app:layout_constraintTop_toBottomOf="@+id/SignUpPageTitle"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/hospitalNameInputField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:paddingBottom="1dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingTop="3dp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hospitalNameInputFieldText" />

    <!-- Bottom border -->
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintEnd_toEndOf="@id/hospitalNameInputField"
        app:layout_constraintStart_toStartOf="@id/hospitalNameInputField"
        app:layout_constraintTop_toBottomOf="@id/hospitalNameInputField" />

    <!--Address Name Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/addressNameInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="@string/Input_field_Address_no_text"
        app:layout_constraintBottom_toTopOf="@+id/addressNameInputField"
        app:layout_constraintStart_toStartOf="@+id/addressNameInputField"
        app:layout_constraintTop_toBottomOf="@+id/hospitalNameInputField"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/addressNameInputField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:paddingBottom="1dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressNameInputFieldText" />

    <!-- Bottom border -->
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintEnd_toEndOf="@id/addressNameInputField"
        app:layout_constraintStart_toStartOf="@id/addressNameInputField"
        app:layout_constraintTop_toBottomOf="@id/addressNameInputField" />

    <!--PPnohe Name Text, EditText and Bottom border-->

    <TextView
        android:id="@+id/phoneInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-37dp"
        android:text="@string/org_phone_text"
        android:textColor="@color/Input_field_text_color"
        app:layout_constraintBottom_toTopOf="@+id/phoneInputField"
        app:layout_constraintStart_toStartOf="@+id/phoneInputField"
        app:layout_constraintTop_toBottomOf="@+id/addressNameInputField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="91+"
        android:textColor="@color/color_palette_5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/phoneInputField"
        app:layout_constraintEnd_toStartOf="@+id/phoneInputField" />

    <EditText
        android:id="@+id/phoneInputField"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:inputType="phone"
        android:paddingTop="3dp"
        android:paddingBottom="1dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneInputFieldText" />

    <!-- Bottom border -->
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintTop_toBottomOf="@id/phoneInputField"
        app:layout_constraintStart_toStartOf="@id/phoneInputField"
        app:layout_constraintEnd_toEndOf="@id/phoneInputField" />

    <!--Email Name Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/emailNameInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="@string/Input_field_Email_Address_text"
        app:layout_constraintBottom_toTopOf="@+id/emailNameInputField"
        app:layout_constraintStart_toStartOf="@+id/emailNameInputField"
        app:layout_constraintTop_toBottomOf="@+id/phoneInputField"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/emailNameInputField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:paddingBottom="1dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailNameInputFieldText" />

    <!-- Bottom border -->
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintTop_toBottomOf="@id/emailNameInputField"
        app:layout_constraintStart_toStartOf="@id/emailNameInputField"
        app:layout_constraintEnd_toEndOf="@id/emailNameInputField" />

    <!--SetPas Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/setPassNameInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="@string/Input_field_set_password_text"
        app:layout_constraintBottom_toTopOf="@+id/setPassNameInputField"
        app:layout_constraintStart_toStartOf="@+id/setPassNameInputField"
        app:layout_constraintTop_toBottomOf="@+id/emailNameInputField"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/setPassNameInputField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:paddingBottom="1dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setPassNameInputFieldText"
        android:drawableEnd="@drawable/ic_eye_closed"/>

    <!-- Bottom border -->
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintTop_toBottomOf="@id/setPassNameInputField"
        app:layout_constraintStart_toStartOf="@id/setPassNameInputField"
        app:layout_constraintEnd_toEndOf="@id/setPassNameInputField" />

    <!--ConfirmPass Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/conPassNameInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="@string/Input_field_confirm_password_text"
        app:layout_constraintBottom_toTopOf="@+id/conPassNameInputField"
        app:layout_constraintStart_toStartOf="@+id/conPassNameInputField"
        app:layout_constraintTop_toBottomOf="@+id/setPassNameInputField"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/conPassNameInputField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:paddingBottom="1dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conPassNameInputFieldText"
        android:drawableEnd="@drawable/ic_eye_closed"/>

    <!-- Bottom border -->
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintTop_toBottomOf="@id/conPassNameInputField"
        app:layout_constraintStart_toStartOf="@id/conPassNameInputField"
        app:layout_constraintEnd_toEndOf="@id/conPassNameInputField" />

    <!--Licence Name Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/licenceInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="@string/org_Licence_text"
        app:layout_constraintBottom_toTopOf="@+id/licenceInputField"
        app:layout_constraintStart_toStartOf="@+id/licenceInputField"
        app:layout_constraintTop_toBottomOf="@+id/conPassNameInputField"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/licenceInputField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:paddingBottom="1dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/licenceInputFieldText" />

    <!-- Bottom border -->
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintEnd_toEndOf="@id/licenceInputField"
        app:layout_constraintStart_toStartOf="@id/licenceInputField"
        app:layout_constraintTop_toBottomOf="@id/licenceInputField" />

    <!--Address Name Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/orgTypeInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="@string/org_type"
        app:layout_constraintBottom_toTopOf="@+id/orgTypeInputField"
        app:layout_constraintStart_toStartOf="@+id/orgTypeInputField"
        app:layout_constraintTop_toBottomOf="@+id/licenceInputField"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/orgTypeInputField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
        android:paddingBottom="1dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orgTypeInputFieldText" />

    <!-- Bottom border -->
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintEnd_toEndOf="@id/orgTypeInputField"
        app:layout_constraintStart_toStartOf="@id/orgTypeInputField"
        app:layout_constraintTop_toBottomOf="@id/orgTypeInputField" />


        <!--Sign up button-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUpBtn"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            style="@style/buttonStyle"
            app:layout_constraintTop_toBottomOf="@+id/orgTypeInputField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/SignUp_text"
            android:layout_marginTop="60dp"
            />

        <!--Text field-->
        <TextView
            android:id="@+id/alreadyAnAccText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/Input_Field_Already_Registered_login"
            app:layout_constraintTop_toBottomOf="@id/signUpBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="100dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            />



