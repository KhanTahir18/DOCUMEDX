<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Input_field_color"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:background="@color/Input_field_color">

        <!--Navbar-->
        <TextView
            android:id="@+id/orgDashboardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:background="@color/color_palette_4"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/robotoblack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/orgDashboardSubText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/org_dashboard"
            android:background="@color/white"
            android:textColor="@color/color_palette_5"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="35dp"
            app:layout_constraintTop_toBottomOf="@id/orgDashboardText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Org_subTitle"
            app:layout_constraintTop_toTopOf="@id/orgDashboardSubText"
            app:layout_constraintBottom_toBottomOf="@id/orgDashboardSubText"
            app:layout_constraintStart_toStartOf="@id/orgDashboardSubText"
            app:layout_constraintEnd_toEndOf="@id/orgDashboardSubText"
            app:layout_constraintVertical_bias="0.73"
            android:textColor="@color/Input_field_text_color"/>

        <!--Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/orgDashboardSubText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewSConstarintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

<!--                Profile Image-->
                <ImageView
                    android:id="@+id/hospitalImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_hospital_image"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hospital_image"
                    app:layout_constraintStart_toStartOf="@id/cardViewSConstarintLayout"
                    app:layout_constraintTop_toTopOf="@id/cardViewSConstarintLayout"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

<!--                orgName-->
                <TextView
                    android:id="@+id/orgNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Input_field_Hospital_Name_text"
                    android:textColor="@color/color_palette_5"
                    app:layout_constraintStart_toEndOf="@id/hospitalImageView"
                    app:layout_constraintTop_toTopOf="@+id/hospitalImageView"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    />

<!--                type org-->
                <TextView
                    android:id="@+id/orgTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-2dp"
                    android:text="Type(Govt, Pvt, Clinic)"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@id/hospitalImageView"
                    app:layout_constraintTop_toBottomOf="@+id/orgNameTextView" />

<!--                Image button for edit profile-->
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>





