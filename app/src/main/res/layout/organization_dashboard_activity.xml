<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Input_field_color"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:background="@color/Input_field_color">

        <!--Navbar-->
        <TextView
            android:id="@+id/orgDashboardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:background="@color/color_palette_4"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/robotoblack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/orgDashboardSubText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/org_dashboard"
            android:background="@color/white"
            android:textColor="@color/color_palette_5"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="35dp"
            app:layout_constraintTop_toBottomOf="@id/orgDashboardText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Org_subTitle"
            app:layout_constraintTop_toTopOf="@id/orgDashboardSubText"
            app:layout_constraintBottom_toBottomOf="@id/orgDashboardSubText"
            app:layout_constraintStart_toStartOf="@id/orgDashboardSubText"
            app:layout_constraintEnd_toEndOf="@id/orgDashboardSubText"
            app:layout_constraintVertical_bias="0.73"
            android:textColor="@color/Input_field_text_color"/>

        <!--Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/orgDashboardSubText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewSConstarintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingBottom="20dp">

<!--                Profile Image-->
                <ImageView
                    android:id="@+id/hospitalImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/round_hospital_image"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintStart_toStartOf="@id/cardViewSConstarintLayout"
                    app:layout_constraintTop_toTopOf="@id/cardViewSConstarintLayout"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

<!--                orgName-->

                <!--                type org-->

                <TextView
                    android:id="@+id/orgNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="-----"
                    android:textColor="@color/color_palette_5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/hospitalImageView"
                    app:layout_constraintTop_toTopOf="@+id/hospitalImageView" />

                <TextView
                    android:id="@+id/orgTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-2dp"
                    android:text="----"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@id/hospitalImageView"
                    app:layout_constraintTop_toBottomOf="@+id/orgNameTextView" />

<!--                Image button for edit profile-->
                <ImageButton
                    android:id="@+id/editProImgBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/edit_text_ic"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/hospitalImageView"
                    app:layout_constraintTop_toTopOf="@id/hospitalImageView"
                    app:layout_constraintEnd_toEndOf="@id/cardViewSConstarintLayout" />

<!--                phone text-->
                <TextView
                    android:id="@+id/orgPhoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No: "
                    android:fontFamily="@font/robotoblack"
                    app:layout_constraintTop_toBottomOf="@id/hospitalImageView"
                    app:layout_constraintStart_toStartOf="@id/hospitalImageView"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/orgPhoneTextDynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    app:layout_constraintTop_toTopOf="@id/orgPhoneText"
                    app:layout_constraintStart_toEndOf="@id/orgPhoneText"
                    android:textColor="@color/black"
                    />

<!--                address-->
                <TextView
                    android:id="@+id/orgAddressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:fontFamily="@font/robotoblack"
                    app:layout_constraintTop_toBottomOf="@id/orgPhoneText"
                    app:layout_constraintStart_toStartOf="@id/hospitalImageView"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/orgAddressTextDynamic"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    app:layout_constraintTop_toTopOf="@id/orgAddressText"
                    app:layout_constraintStart_toEndOf="@id/orgAddressText"
                    android:textColor="@color/black"
                    />
<!--email-->
                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Id: "
                    android:fontFamily="@font/robotoblack"
                    app:layout_constraintTop_toBottomOf="@id/orgAddressTextDynamic"
                    app:layout_constraintStart_toStartOf="@id/hospitalImageView"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/emailTextDynamic"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    app:layout_constraintTop_toTopOf="@id/emailText"
                    app:layout_constraintStart_toEndOf="@id/emailText"
                    android:textColor="@color/black"
                    />

<!--                licence-->
                <TextView
                    android:id="@+id/licenceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Licence: "
                    android:fontFamily="@font/robotoblack"
                    app:layout_constraintTop_toBottomOf="@id/emailText"
                    app:layout_constraintStart_toStartOf="@id/hospitalImageView"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/licenceTextDynamic"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="-----"
                    app:layout_constraintTop_toTopOf="@id/licenceText"
                    app:layout_constraintStart_toEndOf="@id/licenceText"
                    android:textColor="@color/black"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/departmentsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/deparmentCardConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingBottom="20dp"
                >
                <TextView
                    android:id="@+id/DepartmentsCardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departments"
                    android:fontFamily="@font/robotoblack"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@id/deparmentCardConstraint"
                    app:layout_constraintTop_toTopOf="@id/deparmentCardConstraint"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/color_palette_5"
                    />
                <TextView
                    android:id="@+id/deptSubTextView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/DepartmentsCardTextView"
                    app:layout_constraintStart_toStartOf="@id/DepartmentsCardTextView"
                    android:textColor="@color/Input_field_text_color"
                    android:text="View your Departments and add new Departments"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewDeptBtn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="@id/deparmentCardConstraint"
                    app:layout_constraintTop_toTopOf="@id/DepartmentsCardTextView"
                    android:text="View"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_view_more"
                    android:textSize="12sp"
                    android:layout_marginEnd="20dp"
                    />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addDeptBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Department"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_primary"
                    app:layout_constraintTop_toBottomOf="@id/deptSubTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!--Add staff-->

        <androidx.cardview.widget.CardView
            android:id="@+id/StaffsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/departmentsCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/staffCardConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingBottom="20dp"
                >
                <TextView
                    android:id="@+id/StaffCardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staffs"
                    android:fontFamily="@font/robotoblack"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/color_palette_5"
                    />
                <TextView
                    android:id="@+id/staffSubTextView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/StaffCardTextView"
                    app:layout_constraintStart_toStartOf="@id/StaffCardTextView"
                    android:textColor="@color/Input_field_text_color"
                    android:text="View your Departments and add new Departments"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewStaffBtn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/StaffCardTextView"
                    android:text="View"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_view_more"
                    android:textSize="12sp"
                    android:layout_marginEnd="20dp"
                    />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addStaffBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Staff"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_primary"
                    app:layout_constraintTop_toBottomOf="@id/staffSubTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!--Add patients-->
        <androidx.cardview.widget.CardView
            android:id="@+id/patientCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/StaffsCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/patientCardConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingBottom="20dp"
                >
                <TextView
                    android:id="@+id/patientCardTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients"
                    android:fontFamily="@font/robotoblack"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/color_palette_5"
                    />
                <TextView
                    android:id="@+id/patientSubTextView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/patientCardTextView"
                    app:layout_constraintStart_toStartOf="@id/patientCardTextView"
                    android:textColor="@color/Input_field_text_color"
                    android:text="View your Patients and add new Patients"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewPatientBtn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/patientCardTextView"
                    android:text="View"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_view_more"
                    android:textSize="12sp"
                    android:layout_marginEnd="20dp"
                    />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addPatientBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Patient"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_primary"
                    app:layout_constraintTop_toBottomOf="@id/patientSubTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settingCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/patientCardView"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            app:cardCornerRadius="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="20dp">
                <ImageView
                    android:id="@+id/SettinImgeView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_settings"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/color_palette_5" />

                <TextView
                    android:id="@+id/SettingHeadingTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    app:layout_constraintStart_toEndOf="@id/SettinImgeView"
                    app:layout_constraintTop_toTopOf="@id/SettinImgeView"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/robotoblack"
                    android:textColor="@color/color_palette_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Input_field_text_color"
                    app:layout_constraintStart_toStartOf="@id/SettingHeadingTV"
                    app:layout_constraintTop_toBottomOf="@id/SettingHeadingTV"
                    android:text="App Settings"
                    />
                <ImageView
                    android:id="@+id/iv_arrow_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/color_palette_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>