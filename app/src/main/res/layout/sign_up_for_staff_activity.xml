        app:layout_constraintBottom_toTopOf="@+id/hospitalLicenceField"
        app:layout_constraintStart_toStartOf="@+id/hospitalLicenceField"
        app:layout_constraintTop_toBottomOf="@+id/empIdInputField"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/hospitalLicenceField"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/Empty_Edit_Text"
