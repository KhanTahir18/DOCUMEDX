        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/color_palette_5"
        app:layout_constraintTop_toBottomOf="@id/conPassNameInputField"
        app:layout_constraintStart_toStartOf="@id/conPassNameInputField"
        app:layout_constraintEnd_toEndOf="@id/conPassNameInputField" />

    <!--Email Name Text, EditText and Bottom border-->
    <TextView
        android:id="@+id/emailNameInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
