        android:id="@+id/dayDOBNameInputFieldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Input_field_text_color"
        android:text="Day"
        app:layout_constraintBottom_toTopOf="@+id/dayDOBNameInputField"
        app:layout_constraintStart_toStartOf="@+id/dayDOBNameInputField"
        app:layout_constraintTop_toBottomOf="@+id/genderSpinner"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/dayDOBNameInputField"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="1dp"
        android:paddingTop="3dp"
        android:textStyle="bold"
        android:inputType="date"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dayDOBNameInputFieldText" />

    <!-- Bottom border -->
